"" .ideavimrc - Matt Chapman

"" Base Settings
"" ========================================================

set scrolloff=10
set relativelinenumber
set showmode
set showcmd

set smartcase
set incsearch
set hlsearch

set commentary

set visualbell

" Use system clipboard
set clipboard=unnamedplus 

let mapleader = " "

"" Plugin Settings
"" ========================================================

set surround
set highlightedyank
set sneak
set nerdtree
set quickscope

" Easymotion settings
set easymotion
set notimeout

" Relative line numbers
set relativenumber
set number

" Buffer navigation
sethandler <c-h> a:vim
sethandler <c-l> a:vim
sethandler <c-j> a:vim
sethandler <c-k> a:vim
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

" Set the leader key (commonly set to space)
let mapleader = " "

" Which-key settings
set which-key
